@汎用技メッセージ_CP(enemyNum, charactorNum)
  #FUNCTIONS
  #DIM enemyNum
  #DIM charactorNum

  SELECTCASE battle_enemy_id(enemyNum)
      ; ヒルチャール系
    CASE 1, 2, 3, 4, 5, 6, 7
      RETURNF @"%battle_enemy_name(enemyNum)%は%CALLNAME:(charactorNum)%に飛びかかり強引に服を引き裂いてきた！"
      ; スライム系
    CASE 50 TO 63
      RETURNF @"%battle_enemy_name(enemyNum)%は%CALLNAME:(charactorNum)%に粘液を飛ばすと、浴びた部分から服が溶けはじめた！"
    CASEELSE
      RETURNF @"%battle_enemy_name(enemyNum)%は激しい攻撃によって%CALLNAME:(charactorNum)%の服を引き裂いてきた！"
  ENDSELECT