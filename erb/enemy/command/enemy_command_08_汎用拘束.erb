@enemy_command_8(enemyNum, charactorNum)
  #DIM enemyNum
  #DIM charactorNum
  PRINTFORML %battle_enemy_name(enemyNum)%は%CALLNAME:(charactorNum)%を捕まえようと襲いかかってきた

  IF RAND:100 < 33
    CFLAG:(charactorNum):拘束 = enemyNum
    PRINTFORML %CALLNAME:(charactorNum)%は%battle_enemy_name(enemyNum)%に捕まってしまった！
  ENDIF

@enemy_command_8_message(enemyNum, charactorNum)
  #DIM enemyNum
  #DIM charactorNum

  RESULTS = %汎用技メッセージ_拘束(enemyNum, charactorNum)%