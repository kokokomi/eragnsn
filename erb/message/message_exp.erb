@message_exp_up(charactorNum, expType, amount)
  #DIM charactorNum
  #DIMS expType
  #DIM amount
  PRINTFORML %CALLNAME:(charactorNum)%: %expType%+{amount} ({EXP:(charactorNum):(GETNUM(EXP, expType))})

@message_abl_up(charactorNum, abilityName, amount)
  #DIM charactorNum
  #DIMS abilityName
  #DIM amount
  SETCOLOR ACCENT_TEXT_COLOR
  PRINTFORML %CALLNAME:(charactorNum)%: %abilityName%+{amount} ({ABL:(charactorNum):(GETNUM(ABL, abilityName))})
  RESETCOLOR

@message_charactor_lv_up(charactorNum, amount)
  #DIM charactorNum
  #DIM amount
  SETCOLOR ACCENT_TEXT_COLOR
  PRINTFORML %CALLNAME:(charactorNum)%: キャラクターレベル+{amount} ({EXP:(charactorNum):キャラクターレベル}Lv)
  RESETCOLOR

@message_charactor_exp_up(charactorNum, amount)
  #DIM charactorNum
  #DIM amount
  #DIM expPercent
  expPercent = (EXP:(charactorNum):経験値) * 100 / required_charactor_exp(charactorNum)
  PRINTFORML %CALLNAME:(charactorNum)%: 経験値+{amount} ({expPercent}\%)