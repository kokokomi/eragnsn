; キャラクターのHPなどの各種ステータスを簡易表示する
@view_component_statusbar(charactorNum)
#DIM charactorNum
#DIM currentHp
#DIM maxHp
#DIM currentMp
#DIM maxMp
#DIM currentCp
#DIM maxCp
#DIM currentEp
#DIM maxEp

; HP
CALL charactor_get_hp(charactorNum)
currentHp = RESULT
CALL charactor_get_max_hp(charactorNum)
maxHp = RESULT
PRINTFORM HP {currentHp}/{maxHp}
PRINTFORM %UNICODE(0x208D)%
CALL view_component_colorbar(currentHp, maxHp, 5, COLOR_HP, COLOR_HP_BG)
PRINTFORM %UNICODE(0x208E)%

; MP
CALL charactor_get_mp(charactorNum)
currentMp = RESULT
CALL charactor_get_max_mp(charactorNum)
maxMp = RESULT
