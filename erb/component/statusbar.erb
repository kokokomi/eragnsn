; キャラクターのHPなどの各種ステータスを簡易表示する
@view_component_statusbar(charactorNum)
  #DIM charactorNum
  #DIM lcount

  ; HP
  PRINTFORM HP　%UNICODE(0x208D)%
  CALL view_component_colorbar(BASE:(charactorNum):0, MAXBASE:(charactorNum):0, 5, COLOR_HP, COLOR_HP_BG)
  PRINTFORM %UNICODE(0x208E)%
  PRINTFORM \({BASE:(charactorNum):0, 6}/{MAXBASE:(charactorNum):0, 6}\)

  ; EP
  PRINTFORM EP　%UNICODE(0x208D)%
  CALL view_component_colorbar(BASE:(charactorNum):4, MAXBASE:(charactorNum):4, 5, COLOR_EP, COLOR_EP_BG)
  PRINTFORM %UNICODE(0x208E)%
  PRINTFORM \({BASE:(charactorNum):4, 6}/{MAXBASE:(charactorNum):4, 6}\)

  ; MP
  PRINTFORM MP　%UNICODE(0x208D)%
  CALL view_component_colorbar(BASE:(charactorNum):2, MAXBASE:(charactorNum):2, 5, COLOR_MP, COLOR_MP_BG)
  PRINTFORM %UNICODE(0x208E)%
  PRINTFORM \({BASE:(charactorNum):2, 6}/{MAXBASE:(charactorNum):2, 6}\)

  PRINTL

  ; CP
  PRINTFORM CP　%UNICODE(0x208D)%
  CALL view_component_colorbar(BASE:(charactorNum):3, MAXBASE:(charactorNum):3, 5, COLOR_CP, COLOR_CP_BG)
  PRINTFORM %UNICODE(0x208E)%
  PRINTFORM \({BASE:(charactorNum):3, 6}/{MAXBASE:(charactorNum):3, 6}\)

  ; 元素チャージ
  PRINTFORM ER　%UNICODE(0x208D)%
  CALL view_component_colorbar(CFLAG:(charactorNum):元素エネルギー量, ABL:(charactorNum):元素エネルギー, 5, 0x0000CD, 0x000080)
  PRINTFORM %UNICODE(0x208E)%
  PRINTFORM \({CFLAG:(charactorNum):元素エネルギー量,6}/{ABL:(charactorNum):元素エネルギー,6}\)

  PRINTL

  PRINTFORM 状態: 
  FOR lcount, 0, VARSIZE("BAD_STATUS")
    IF charactor_has_bad_status(charactorNum, BAD_STATUS:(lcount))
      PRINTFORM 【%BAD_STATUS:(lcount)%】
    ENDIF
  NEXT 

  PRINTL
