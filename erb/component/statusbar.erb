PRINTFORM %UNICODE(0x208D)%
CALL view_component_colorbar(currentMp, maxMp, 5, COLOR_MP, COLOR_MP_BG)
PRINTFORM %UNICODE(0x208E)%

; CP
CALL charactor_get_cp(charactorNum)
currentCp = RESULT
CALL charactor_get_max_cp(charactorNum)
maxCp = RESULT
PRINTFORM CP {currentCp}/{maxCp}
PRINTFORM %UNICODE(0x208D)%
CALL view_component_colorbar(currentCp, maxCp, 5, COLOR_CP, COLOR_CP_BG)
PRINTFORM %UNICODE(0x208E)%

; EP
CALL charactor_get_ep(charactorNum)
currentEp = RESULT
CALL charactor_get_max_Ep(charactorNum)
maxEp = RESULT
PRINTFORM EP {currentEp}/{maxEp}
PRINTFORM %UNICODE(0x208D)%
CALL view_component_colorbar(currentEp, maxEp, 5, COLOR_EP, COLOR_EP_BG)
PRINTFORM %UNICODE(0x208E)%